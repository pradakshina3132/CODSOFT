      <div className="flex gap-5 items-center">
        <button
          onClick={() => onIncrement(id)}
          className="text-xs font-extrabold my-auto"
          aria-label="Add one"
        >
          +
        </button>
        <button
          onClick={() => onDecrement(id)}
          className="px-2.5 pb-6 my-auto w-6 h-6 text-xs font-extrabold text-white bg-green-600 rounded"
          aria-label="Remove one"
        >
          -
        </button>
      </div>
    </article>
  );
};

export default BurgerItem;
