"use client";

import React, { useState } from "react";
import BurgerHeader from "./BurgerHeader";
import BurgerItem from "./BurgerItem";
import AddToCartButton from "./AddToCartButton";
import { BurgerItem as BurgerItemType } from "./types";

const BurgerApp: React.FC = () => {
  const [burgerItems, setBurgerItems] = useState<BurgerItemType[]>([
    {
      id: "1",
      name: "Cheese Burger",
      price: 199,
      image:
        "https://cdn.builder.io/api/v1/image/assets/TEMP/e9f4246c664d26c32c8b824ee194428ea4ffe2198ec9b6fb54aad4e178ec640c?placeholderIfAbsent=true&apiKey=bd2d397bb31541518f9da939b19b8b0d",
      quantity: 1,
    },
    {
      id: "2",
      name: "Crisspy Cheese Burger",
      price: 230,
      image:
        "https://cdn.builder.io/api/v1/image/assets/TEMP/721c6282796725fe4deb2d8c9bf4a89378c74401e35d8ee46c15b266345372c9?placeholderIfAbsent=true&apiKey=bd2d397bb31541518f9da939b19b8b0d",
      quantity: 1,
    },
    {
      id: "3",
      name: "Veg Burger",
      price: 199,
      image:
        "https://cdn.builder.io/api/v1/image/assets/TEMP/fbc07c82e7ff7bb34307ffe8ab44fdabe4de75e804203dae4885fd86723665d2?placeholderIfAbsent=true&apiKey=bd2d397bb31541518f9da939b19b8b0d",
      quantity: 1,
    },
  ]);

  const handleIncrement = (id: string) => {
    setBurgerItems(
      burgerItems.map((item) =>
        item.id === id ? { ...item, quantity: item.quantity + 1 } : item,
      ),
    );
  };

  const handleDecrement = (id: string) => {
    setBurgerItems(
      burgerItems.map((item) =>
        item.id === id && item.quantity > 0
          ? { ...item, quantity: item.quantity - 1 }
          : item,
      ),
    );
  };

  const handleAddToCart = () => {
    // In a real app, this would add the items to a cart
    console.log(
      "Adding to cart:",
      burgerItems.filter((item) => item.quantity > 0),
    );
    alert("Items added to cart!");
  };

  // Custom rendering for the first item to match the design exactly
  const renderFirstItem = () => {
    const item = burgerItems[0];
    return (
      <article className="pt-10 pr-6 pb-2.5 pl-0.5 mt-12 w-full bg-white rounded-xl shadow-[0px_4px_4px_rgba(0,0,0,0.2)]">
        <div className="flex gap-5 max-md:flex-col">
          <div className="w-[26%] max-md:ml-0 max-md:w-full">
            <img
              src={item.image}
              alt={item.name}
              className="object-contain shrink-0 mt-1 rounded-full aspect-square w-[72px]"
            />
          </div>
          <div className="ml-5 w-2/5 max-md:ml-0 max-md:w-full">
            <div className="flex gap-3.5 items-start text-xs font-extrabold text-center text-green-600">
              <p className="self-end mt-14 tracking-normal">₹{item.price}</p>
              <h3 className="self-start tracking-normal">{item.name}</h3>
            </div>
          </div>
          <div className="ml-5 w-[34%] max-md:ml-0 max-md:w-full">
            <div className="flex gap-10 self-stretch my-auto text-xs font-extrabold tracking-normal text-center text-white whitespace-nowrap">
              <button
                onClick={() => handleIncrement(item.id)}
                className="self-start"
                aria-label="Add one"
              >
                +
              </button>
              <button
                onClick={() => handleDecrement(item.id)}
                className="px-2.5 pt-0.5 pb-5 w-6 h-6 bg-green-600 rounded"
                aria-label="Remove one"
              >
                -
              </button>
            </div>
          </div>
        </div>
      </article>
    );
  };

  // Custom rendering for the second item to match the design exactly
  const renderSecondItem = () => {
    const item = burgerItems[1];
    return (
      <article className="flex gap-5 justify-between items-start pt-9 pr-6 pb-4 pl-1.5 mt-9 text-xs font-extrabold tracking-normal text-center text-white bg-white rounded-xl shadow-[0px_4px_4px_rgba(0,0,0,0.2)]">
        <img
          src={item.image}
          alt={item.name}
          className="object-contain shrink-0 self-start rounded-full aspect-[0.99] w-[71px]"
        />
        <div className="flex flex-col self-start text-xs text-green-600">
          <h3>{item.name}</h3>
          <p className="self-start mt-12">₹{item.price}</p>
        </div>
        <button
          onClick={() => handleIncrement(item.id)}
          className="my-auto"
          aria-label="Add one"
        >
          +
        </button>
        <button
          onClick={() => handleDecrement(item.id)}
          className="px-2.5 pb-6 my-auto w-6 h-6 whitespace-nowrap bg-green-600 rounded"
          aria-label="Remove one"
        >
          -
        </button>
      </article>
    );
  };

  // Custom rendering for the third item to match the design exactly
  const renderThirdItem = () => {
    const item = burgerItems[2];
    return (
      <article className="flex gap-5 justify-between items-start pt-10 pr-6 pb-3.5 pl-1.5 mt-7 w-full font-extrabold tracking-normal text-center bg-white rounded-xl shadow-[0px_4px_4px_rgba(0,0,0,0.2)]">
        <div className="flex gap-10 items-start self-start text-xs text-green-600">
          <img
            src={item.image}
            alt={item.name}
            className="object-contain shrink-0 rounded-full aspect-[0.99] w-[71px]"
          />
          <div className="flex gap-1 items-start">
            <p className="grow self-end mt-14">₹{item.price}</p>
            <h3 className="self-start">{item.name}</h3>
          </div>
        </div>
        <button
          onClick={() => handleDecrement(item.id)}
          className="self-end px-2.5 pb-6 mt-7 w-6 h-6 text-xs text-white whitespace-nowrap bg-green-600 rounded"
          aria-label="Remove one"
        >
          -
        </button>
      </article>
    );
  };

  return (
    <main className="overflow-hidden mx-auto w-full bg-white max-w-[480px]">
      <div className="flex flex-col px-2 pt-14 pb-32 w-full">
        <BurgerHeader />

        {renderFirstItem()}
        {renderSecondItem()}
        {renderThirdItem()}

        <AddToCartButton onClick={handleAddToCart} />
      </div>
    </main>
  );
};

export default BurgerApp;
